{% if autonomy_realm_identity_management_system == "ad" %}
auth_gssapi_hostname = "$ALL"
auth_krb5_keytab = "{{ autonomy_dovecot_etc }}/dovecot.keytab"
{% endif %}

{% if autonomy_dovecot_auth_use_winbind is truthy -%}
