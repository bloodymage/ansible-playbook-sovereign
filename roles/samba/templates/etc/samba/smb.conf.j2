# {{ ansible_managed }}

{# ============================================================================================== #}
{#                                                                                                #}
{# Global parameters                                                                              #}
{#                                                                                                #}
{# ============================================================================================== #}
[global]
netbios name = {{ autonomy_hostname | upper }}
realm = {{ autonomy_domain | upper }}
workgroup = {{ autonomy_org_unit_name | upper }}
{% if inventory_hostname in groups['samba_domain_controllers'] -%}
server role = active directory domain controller
server services = s3fs, rpc, nbt, wrepl, ldap, cldap, kdc, drepl, winbindd, ntp_signd, kcc, dnsupdate
idmap_ldb:use rfc2307 = yes
{% if autonomy_samba_config_dns_zone_transfer_clients_allow is truthy -%}
  dns zone transfer clients allow =
  {%- for item in autonomy_samba_config_dns_zone_transfer_clients_allow -%}
    {{ " " }}{{ item }}
  {%- endfor -%}
{% endif %}
{% if autonomy_samba_config_kdc_enable_fast is truthy %}
kdc enable fast = {{ autonomy_samba_config_kdc_enable_fast }}
{% endif %}
{% else -%}
  security = {{ autonomy_samba_config_security }}
{% endif %}

# Logging
max log size = 1000
log file = /var/log/samba/log.%m
log level = {{ autonomy_samba_config_log_level }}
{% if inventory_hostname not in groups['samba_domain_controllers'] %}
{# ============================================================================================== #}
{#                                                                                                #}
{# User Settings                                                                                  #}
{#                                                                                                #}
{# ============================================================================================== #}
username map = /etc/samba/user.map
{% endif %}

{% if inventory_hostname in groups['samba_domain_controllers'] -%}
{# ============================================================================================== #}
{#                                                                                                #}
{# TLS Settings                                                                                   #}
{#                                                                                                #}
{# ============================================================================================== #}
tls enabled  = {{ autonomy_samba_config_tls_enabled }}
tls certfile = {{ autonomy_samba_config_tls_certfile }}
tls keyfile  = {{ autonomy_samba_config_tls_keyfile }}
tls cafile   = {{ autonomy_samba_config_tls_cafile }}
{% if autonomy_samba_config_tls_crlfile is truthy -%}
  tls crlfile  = {{ autonomy_samba_config_tls_crlfile }}
{% endif %}
tls dhparams file = {{ autonomy_samba_config_tls_dhparams_file }}
{% else %}
# Idmap Settings
# idmap config for ...
idmap config * : backend = tdb
idmap config * : range = 3000-7999
# idmap config for {{ autonomy_org_unit_name | upper }} domain
idmap config {{ autonomy_org_unit_name | upper }} : backend = ad
idmap config {{ autonomy_org_unit_name | upper }} : schema_mode = rfc2307
idmap config {{ autonomy_org_unit_name | upper }} : range = {{ autonomy_samba_config_idmap_config_range }}
idmap config {{ autonomy_org_unit_name | upper }} : unix_nss_info = yes
idmap config {{ autonomy_org_unit_name | upper }} : unix_primary_group = yes

# Winbind Settings
winbind enum users = {{ autonomy_samba_config_winbind_enum_users }}
winbind enum groups = {{ autonomy_samba_config_winbind_enum_groups }}
winbind refresh tickets = {{ autonomy_samba_config_winbind_refresh_tickets }}

{% if autonomy_smart_card_login is false %}
# ==================================================================================================
#
# Misc
#
# ==================================================================================================
# Used for SSH Single Sign On
dedicated keytab file = /etc/krb5.keytab
kerberos method = secrets and keytab
{% endif %}
{% endif %}

{% if inventory_hostname in groups['samba_domain_controllers'] -%}
{# Shares #}
{% for share in __dc_samba_shares -%}
[{{ share.name }}]
path = {{ share.path }}
read only = No

{% endfor %}
{% else -%}
  {% if samba_shares is defined -%}
# Enable ACL Support
vfs objects = acl_xattr
map acl inherit = yes
acl_xattr: ignore system acls = yes
#inherit owner = unix only

# ==================================================================================================
#
# Share settings
#
# ==================================================================================================

{% for share in samba_shares -%}
  [{{ share.name }}]
  path = {{ share.path }}
  read only = No
  {% if share.extended_options is defined -%}
    {% for option in share.extended_options -%}
      {{ option }}
    {% endfor %}
  {% endif %}

{% endfor %}
{% endif %}
{% endif %}
